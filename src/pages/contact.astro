---
// src/pages/contact.astro

import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen p-4 md:p-8">
    <div
      class="bg-white dark:bg-black rounded-3xl mx-auto max-w-3xl p-6 md:p-12 shadow-sm border border-gray-100 dark:border-neutral-900"
    >
      <!-- Header with Back Link -->

      <!-- Blog Header -->
      <header class="mb-12 text-gray-900 dark:text-neutral-100" >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="36"
          height="36"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-contact-round"
          ><path d="M16 2v2"></path><path d="M17.915 22a6 6 0 0 0-12 0"
          ></path><path d="M8 2v2"></path><circle cx="12" cy="12" r="4"
          ></circle><rect x="3" y="4" width="18" height="18" rx="2"></rect></svg
        >
        <h1 class="text-4xl font-bold  mt-2">Contact</h1>
        <p class="text-lg text-gray-600 dark:text-neutral-500 mt-2">Reach out!</p>
      </header>

      <!-- Blog Posts Grid -->
      <div class="gap-6 flex-wrap flex">
        <a target="_blank" href="https://www.linkedin.com/in/robertjkirk/">
          <div
            class={`rounded-2xl p-4 px-6  text-blue-500 hover:bg-blue-500/10 transition-all border border-blue-500 w-fit`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-linkedin"
              ><path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path><rect width="4" height="12" x="2" y="9"></rect><circle
                cx="4"
                cy="4"
                r="2"></circle></svg
            >
            <p class="mt-2 font-medium">@robertjkirk</p>
          </div>
        </a>
        <a href="mailto:contact@robertjkirk.com">
          <div
            class={`rounded-2xl p-4 px-6  text-gray-500 hover:bg-gray-500/10 transition-all border border-gray-500 w-fit`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-mail"
              ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
            >
            <p class="mt-2 font-medium">contact@robertjkirk.com</p>
          </div>
        </a>
        <!-- <a  href="mailto:hi@robertjkirk.com">
        <div class={`rounded-2xl p-4 px-6  text-gray-500 hover:bg-gray-500/20 transition-all border border-gray-500 w-fit`}>
            
            <p class="text-3xl h-[10]">𝕏</p>
            <p class="mt-2 font-medium">hi@robertjkirk.com</p>
        </div>
    </a> -->
      </div>
    </div>
  </div>
</Layout>
