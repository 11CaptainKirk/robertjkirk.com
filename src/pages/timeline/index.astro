---
// src/pages/blog/index.astro
import { getCollection } from "astro:content";
import TimelineEntry from "../../components/TimelineEntry.astro";
import Layout from "../../layouts/Layout.astro";

// Get all blog posts and sort by date
const posts = await getCollection("timeline");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---
<Layout>
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-white p-6 md:p-12">
  <div class="max-w-3xl mx-auto">
    <!-- Header with Back Link -->
    <nav class="mb-12">
      <a
        href="/"
        class="text-gray-600 hover:text-blue-600 transition-colors inline-flex items-center gap-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-arrow-left"
          ><path d="m12 19-7-7 7-7"></path><path d="M19 12H5"></path></svg
        > Back
      </a>
    </nav>

    <!-- Blog Header -->
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900">Writing</h1>
      <p class="text-xl text-gray-600 mt-2">
        Thoughts on design and development
      </p>
    </header>

    <!-- Blog Posts Grid -->
    <div class="space-y-6">
      {
        sortedPosts.map((post) => (
          // <article class="bg-white rounded-3xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-all">
          //   <a href={`/writing/${post.slug}`} class="block">
          //     <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
          //       <span>{post.data.formattedDate}</span>
          //       <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-500"></span>
          //       <span>{post.data.readingTime} min read</span>
          //     </div>
          //     <h2 class="text-2xl font-medium text-gray-900 mb-3 hover:text-blue-600 transition-colors">
          //       {post.data.title}
          //     </h2>
          //     <p class="text-gray-600">
          //       {post.data.description}
          //     </p>
          //   </a>
          // </article>
          <TimelineEntry
            title={post.data.title}
            description={post.data.description}
            tags={[
              post.data.formattedDate,
              post.data.readingTime + " min read",
            ]}
            href={`/writing/${post.slug}`}
          />
        ))
      }
    </div>
  </div>
</div>
</Layout>