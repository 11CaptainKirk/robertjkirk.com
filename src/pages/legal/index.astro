---
// src/pages/contact.astro

import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen p-4 md:p-8">
    <div
      class="bg-white rounded-3xl mx-auto max-w-3xl p-6 md:p-12 shadow-sm border border-gray-200 dark:border-neutral-900"
    >
      <!-- Header with Back Link -->

      <!-- Blog Header -->
      <header class="mb-12">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="36"
          height="36"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-scale"
          ><path d="m16 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"
          ></path><path d="m2 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"
          ></path><path d="M7 21h10"></path><path d="M12 3v18"></path><path
            d="M3 7h2c2 0 5-1 7-2 2 1 5 2 7 2h2"></path></svg
        >
        <h1 class="text-4xl font-bold text-gray-900 mt-2">Legal</h1>
        <!-- <p class="text-lg text-gray-600 mt-2">Reach out!</p> -->
      </header>

      <!-- Blog Posts Grid -->
      <div class="gap-6 flex-wrap flex">
        <a href="/legal/privacy">
          <div
            class={`rounded-2xl p-4 px-6  text-blue-500 hover:bg-blue-500/10 transition-all border border-blue-500 w-fit`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-globe-lock"
              ><path
                d="M15.686 15A14.5 14.5 0 0 1 12 22a14.5 14.5 0 0 1 0-20 10 10 0 1 0 9.542 13"
              ></path><path d="M2 12h8.5"></path><path
                d="M20 6V4a2 2 0 1 0-4 0v2"></path><rect
                width="8"
                height="5"
                x="14"
                y="6"
                rx="1"></rect></svg
            >
            <p class="mt-2 font-medium">Privacy Policy</p>
          </div>
        </a>
        <a href="/legal/terms">
          <div
            class={`rounded-2xl p-4 px-6  text-gray-500 hover:bg-gray-500/10 transition-all border border-gray-500 w-fit`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-receipt-text"
              ><path
                d="M4 2v20l2-1 2 1 2-1 2 1 2-1 2 1 2-1 2 1V2l-2 1-2-1-2 1-2-1-2 1-2-1-2 1Z"
              ></path><path d="M14 8H8"></path><path d="M16 12H8"></path><path
                d="M13 16H8"></path></svg
            >
            <p class="mt-2 font-medium">Terms of Use</p>
          </div>
        </a>
        <!-- <a  href="mailto:hi@robertjkirk.com">
        <div class={`rounded-2xl p-4 px-6  text-gray-500 hover:bg-gray-500/20 transition-all border border-gray-500 w-fit`}>
            
            <p class="text-3xl h-[10]">ğ•</p>
            <p class="mt-2 font-medium">hi@robertjkirk.com</p>
        </div>
    </a> -->
      </div>
    </div>
  </div>
</Layout>
